<h1>Listing Counsels</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Diagnosis</th>
      <th>Counsel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counsels.each do |counsel| %>
      <tr>
        <td><%= counsel.id %></td>
        <td><%= counsel.name %></td>
        <td><%= excerpt(counsel.counsel, 'Your', radius: 75) %></td>
        <td><%= link_to 'Show', counsel %></td>
        <td><%= link_to 'Edit', edit_counsel_path(counsel) %></td>
        <td><%= link_to 'Destroy', counsel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

